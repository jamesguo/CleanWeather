<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#33333333"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/date"
        style="@style/text_16_white"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dip"
        android:gravity="center_vertical"
        android:textIsSelectable="false" />

    <TextView
        android:id="@+id/forcast_weather_temp"
        style="@style/text_15_white_b"
        android:layout_width="55dip"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:textIsSelectable="false"/>

    <View
        android:id="@+id/forcast_weather_icon"
        android:layout_width="25dip"
        android:layout_height="25dip"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dip" />

    <View
        android:id="@+id/forcast_weather_icon_2"
        android:layout_width="25dip"
        android:layout_height="25dip"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dip" />

    <TextView
        android:id="@+id/forcast_weather_str"
        style="@style/text_16_white_b"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:gravity="right|center_vertical"
        android:textIsSelectable="false"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="10dip" />

 <!--    <TextView
        android:id="@+id/forcast_wind"
        style="@style/text_16_white"
        android:layout_width="wrap_content"
        android:layout_height="30dip"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:textIsSelectable="false" /> -->

</LinearLayout>