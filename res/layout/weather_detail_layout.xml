<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.cleanweather.widget.HeightLessView
        android:id="@+id/weather_info_content"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/weather_info_height"
            android:background="@color/background_window"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/today_weather"
                style="@style/text_50_0065ca_b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_margin="20dip"
                android:gravity="center_vertical"
                android:textIsSelectable="false" />

            <TextView
                android:id="@+id/today_temp"
                style="@style/text_40_black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/today_weather"
                android:layout_gravity="bottom"
                android:layout_margin="20dip"
                android:gravity="center_vertical"
                android:textIsSelectable="false" />

            <View
                android:id="@+id/down_guide_text"
                android:layout_width="30dip"
                android:layout_height="30dip"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="5dip"
                android:visibility="invisible" />

            <View
                android:id="@+id/weather_icon"
                android:layout_width="150dip"
                android:layout_height="150dip"
                android:layout_above="@+id/down_guide_text"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="25dip"
                android:layout_marginLeft="20dip" />

            <TextView
                android:id="@+id/current_temp"
                style="@style/text_80_00ddff_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/down_guide_text"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="25dip"
                android:layout_marginRight="20dip"
                android:gravity="right|bottom"
                android:textIsSelectable="false" />

            <View
                android:id="@+id/update_weather"
                android:layout_width="25dip"
                android:layout_height="25dip"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="15dip"
                android:layout_marginRight="70dip" />

            <TextView
                android:id="@+id/update_time"
                style="@style/text_16_black"
                android:layout_width="wrap_content"
                android:layout_height="25dip"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="15dip"
                android:layout_marginRight="20dip"
                android:gravity="center" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/background_tab"
            android:orientation="vertical" >

            <View
                android:id="@+id/more_layout"
                android:layout_width="40dip"
                android:layout_height="@dimen/bottomPreferredHeight"
                android:layout_gravity="center" />

            <include
                android:id="@+id/forcast_1"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/forcast_info_height"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                layout="@layout/forcast"
                android:visibility="invisible" />

            <include
                android:id="@+id/forcast_2"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/forcast_info_height"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="10dip"
                layout="@layout/forcast"
                android:visibility="invisible" />

            <include
                android:id="@+id/forcast_3"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/forcast_info_height"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="10dip"
                layout="@layout/forcast"
                android:visibility="invisible" />

            <include
                android:id="@+id/forcast_4"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/forcast_info_height"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="10dip"
                layout="@layout/forcast"
                android:visibility="invisible" />

            <include
                android:id="@+id/forcast_5"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/forcast_info_height"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="10dip"
                layout="@layout/forcast"
                android:visibility="invisible" />

            <include
                android:id="@+id/forcast_6"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/forcast_info_height"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="10dip"
                layout="@layout/forcast"
                android:visibility="invisible" />
        </LinearLayout>
    </com.cleanweather.widget.HeightLessView>

</RelativeLayout>